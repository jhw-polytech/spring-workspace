package di.java;

import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

/*
 * 기존에 xml이 하던 객체생성을 자바 파일이 하게 하기 위한 클래스
 * (<context:component-scan base-package="di.test03" />를 대체)
 */

@Configuration
public class Config {
	
	@Bean
	@Qualifier("car")
	public Car getCar() {
		return new Car();
	}
	
	@Bean
	public Tire getTire() { // getTire라는 이름은 중요하지 않음! HankookTire 객체를 컨테이너에 올린다는 게 중요
		return new HankookTire();
		// <bean class="di.java.HankookTire" id="hankookTire" />
	}

}
